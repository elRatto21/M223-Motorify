<h1>Teams</h1>

<%= link_to "New team", new_admin_team_path, class: 'create-btn' %>

  <table>
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.id %></td>
          <td><%= team.name %></td>
          <td>
            <%= link_to "Details", admin_team_path(team) %>
            <%= link_to "Edit", edit_admin_team_path(team) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
