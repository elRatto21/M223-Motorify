<%= form_with(model: service) do |form| %>
  <% if service.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :mileage, style: "display: block" %>
    <%= form.number_field :mileage %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :bike_id, "Bike" %>
    <%= form.collection_select :bike_id, Bike.all, :id, ->(bike) { "#{bike.manufacturer} - #{bike.model}" }, prompt: "Select a bike" %>
  </div>

  <div>
  <%= form.label :part_ids, "Select Part" %>
  <%= form.collection_select :part_ids, @parts, :id, :title, {}, { multiple: true } %>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
