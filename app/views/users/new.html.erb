<h1>Sign up</h1>

<%= form_with model: @user do |f| %>
    <% if @user.errors.any? %>
        <div>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div>
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>
    <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>
    <div>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>
    <p>
        <%= f.submit class: 'create-btn' %>
    </p>
    <div>
        <%= link_to 'Back to login', login_path %>
    </div>
<% end %>
    